<div class="p-5">
    <form action="/admin/users/edit/<%= user.id %>" method="post">
        <div class="mb-3">
            <label for="pwd" class="form-label">name:</label>
            <input value="<%= user.name %>" type="name" class="form-control" id="pwd" placeholder="Enter name"
                name="name">
        </div>
        <div class="mb-3 mt-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" class="form-control" id="email" value="<%= user.email %>" placeholder="Enter email"
                name="email">
        </div>
        <div class="mb-3">
            <label for="pwd" class="form-label">Password:</label>
            <input value="<%= user.password %>" type="password" class="form-control" id="pwd"
                placeholder="Enter password" name="password">
        </div>
        <div class="p-3">
            <select name="status" id="" class="form-control">
                <option value="1" selected="<%= user.status == true ? " true" : "false" %>">active</option>
                <option value="0" selected="<%= user.status == false ? " true" : "false" %>">inactive</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Add</button>
    </form>
</div>